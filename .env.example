# CP'S Enterprise POS - Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# Application Settings
# ============================================
APP_NAME="CP'S Enterprise POS"
APP_VERSION=2.0.0
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production

# ============================================
# Server Settings
# ============================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# ============================================
# Database Settings (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/cps_pos_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Test Database
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/cps_pos_test_db

# ============================================
# Redis Settings
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_POOL_SIZE=50

# ============================================
# JWT Settings
# ============================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Email Settings (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_FROM_EMAIL=noreply@cps-enterprise.com
SMTP_FROM_NAME="CP'S Enterprise POS"

# ============================================
# File Storage (AWS S3 / MinIO)
# ============================================
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cps-enterprise-assets
AWS_S3_ENDPOINT=

# MinIO Configuration (if using MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=cps-enterprise-assets
MINIO_SECURE=false

# ============================================
# Payment Gateway Settings
# ============================================
# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ============================================
# External Services
# ============================================
# Sentry (Error Tracking)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ENVIRONMENT=development

# ============================================
# Logging Settings
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/cps-pos/app.log

# ============================================
# Security Settings
# ============================================
ALLOWED_HOSTS=localhost,127.0.0.1,api.cps-enterprise.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://app.cps-enterprise.com
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# Feature Flags
# ============================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_MFA=false
ENABLE_ANALYTICS=true

# ============================================
# Cache Settings
# ============================================
CACHE_TTL=3600
CACHE_PREFIX=cps_pos

# ============================================
# Background Tasks (Celery)
# ============================================
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_ALWAYS_EAGER=false

# ============================================
# Development Settings
# ============================================
# Don't use in production!
SQL_ECHO=false
SQL_ECHO_POOL=false
